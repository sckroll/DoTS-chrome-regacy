{
  "manifest_version": 2,
  "name": "DoTS",
  "homepage_url": "http://localhost:8080/",
  "description": "A Web-crawling-based collaboration tool for any projects",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DoTS",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "externally_connectable": {
    "ids": ["jpiagnpijljkijffgaidojpebhmijljc"],
    "matches": ["http://localhost:8080/*", "*://*.dots-00.appspot.com/*"]
  }
}
